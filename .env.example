# Green API Configuration (get from https://console.green-api.com/)
GREEN_API_INSTANCE_ID=your_instance_id_here
GREEN_API_TOKEN=your_api_token_here

# Legacy WhatsApp API Configuration (not needed if using Green API)
WHATSAPP_API_URL=http://localhost:3000
WHATSAPP_API_KEY=your_api_key_here

# Database Configuration
# Railway: Use ${{postgres.DATABASE_URL}} or your PostgreSQL connection URL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/whatsapp_monitor

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_LLM_MODEL=models/gemini-flash-latest

# Notification Configuration
SUMMARY_RECIPIENT_PHONE=+972542607800
SUMMARY_SCHEDULE_HOUR=20
SUMMARY_SCHEDULE_TIMEZONE=Asia/Jerusalem

# Application Configuration
LOG_LEVEL=INFO
MINIMUM_MESSAGES_FOR_SUMMARY=15
MAX_MESSAGES_PER_SUMMARY=1000

# Retry Configuration
MAX_RETRY_ATTEMPTS=6
RETRY_MIN_WAIT=1
RETRY_MAX_WAIT=30
